# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:4321
BACKEND_URL=http://localhost:3000

# Database (Supabase PostgreSQL via Drizzle ORM)
# Transaction mode (port 6543) for regular queries
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
# Session mode (port 5432) for migrations
DATABASE_URL_MIGRATION=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres

# Supabase (optional, for direct client access)
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# VIP Reseller API
VIPRESELLER_API_ID=your_api_id
VIPRESELLER_API_KEY=your_api_key

# Xendit Payment Gateway
XENDIT_SECRET_KEY=xnd_development_xxxx
XENDIT_WEBHOOK_TOKEN=your_webhook_verification_token
XENDIT_IS_PRODUCTION=false

# Admin Fee (in IDR)
DEFAULT_ADMIN_FEE=1000

# WhatsApp Notification (Optional)
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
ADMIN_WHATSAPP=6281234567890
CONTACT_WHATSAPP=6281234567890
