---
import Layout from "../../layouts/Layout.astro";
import { getProductBySlug, checkTargetId, createOrder } from "../../lib/api";
import { formatCurrency } from "../../lib/utils";
import { User, Shield, Zap } from "lucide-astro";

const { slug } = Astro.params;
const { data: product } = await getProductBySlug(slug);

if (!product) {
    return Astro.redirect("/404");
}

// Mock denominations for now (should come from backend relation)
const denominations = [
    { id: 1, name: "3 Diamonds", price: 1500 },
    { id: 2, name: "10 Diamonds", price: 3500 },
    { id: 3, name: "50 Diamonds", price: 15000 },
    { id: 4, name: "100 Diamonds", price: 28000 },
    { id: 5, name: "500 Diamonds", price: 135000 },
    { id: 6, name: "1000 Diamonds", price: 260000 },
];

const paymentMethods = [
    { id: "qris", name: "QRIS", icon: "üì±", fee: 0 },
    { id: "dana", name: "DANA", icon: "üëõ", fee: 0 },
    { id: "gopay", name: "GoPay", icon: "üü¢", fee: 0 },
    { id: "va_bca", name: "BCA VA", icon: "üè¶", fee: 2500 },
];
---

<Layout>
    <div class="min-h-screen pb-20">
        <!-- Header Background -->
        <div class="h-[300px] relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-b from-black/60 to-[var(--color-background)] z-10"
            >
            </div>
            <img
                src={product.imageUrl || "/images/placeholder-game.jpg"}
                alt={product.name}
                class="w-full h-full object-cover blur-sm"
            />
        </div>

        <div class="container mx-auto px-4 -mt-32 relative z-20">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Sidebar Info -->
                <div class="lg:col-span-1">
                    <div class="glass rounded-3xl p-6 sticky top-24">
                        <div
                            class="aspect-square rounded-2xl overflow-hidden mb-6 shadow-2xl"
                        >
                            <img
                                src={product.imageUrl ||
                                    "/images/placeholder-game.jpg"}
                                alt={product.name}
                                class="w-full h-full object-cover"
                            />
                        </div>

                        <h1 class="text-3xl font-bold text-white mb-2">
                            {product.name}
                        </h1>
                        <p class="text-white/60 mb-6">{product.provider}</p>

                        <div class="space-y-4 text-sm text-white/70">
                            <div class="flex items-center gap-3">
                                <Zap class="w-5 h-5 text-yellow-400" />
                                <span>Proses Otomatis Instan</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <Shield class="w-5 h-5 text-green-400" />
                                <span>Garansi 100% Aman</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <User class="w-5 h-5 text-blue-400" />
                                <span>Layanan 24 Jam</span>
                            </div>
                        </div>

                        <div class="mt-8 pt-8 border-t border-white/10">
                            <p class="text-white/50 text-sm leading-relaxed">
                                {
                                    product.description ||
                                        "Top up game termurah dan terpercaya. Masukkan ID, pilih nominal, lakukan pembayaran, dan diamonds akan masuk otomatis."
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Order Form -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- 1. Data Akun -->
                    <div class="glass rounded-3xl p-6 md:p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-[var(--color-primary)] flex items-center justify-center font-bold text-white"
                            >
                                1
                            </div>
                            <h2 class="text-xl font-bold text-white">
                                Masukkan Data Akun
                            </h2>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label
                                    class="block text-sm font-medium text-white/70 mb-2"
                                    >User ID</label
                                >
                                <input
                                    type="text"
                                    placeholder="Contoh: 12345678"
                                    class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-[var(--color-primary)] transition-colors"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-white/70 mb-2"
                                    >Zone ID (Server)</label
                                >
                                <input
                                    type="text"
                                    placeholder="Contoh: 1234"
                                    class="w-full bg-black/20 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-[var(--color-primary)] transition-colors"
                                />
                            </div>
                        </div>
                        <p class="text-xs text-white/40 mt-3">
                            *Klik tombol bantuan di kanan bawah jika bingung
                            mencari ID.
                        </p>
                    </div>

                    <!-- 2. Pilih Nominal -->
                    <div class="glass rounded-3xl p-6 md:p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-[var(--color-primary)] flex items-center justify-center font-bold text-white"
                            >
                                2
                            </div>
                            <h2 class="text-xl font-bold text-white">
                                Pilih Nominal
                            </h2>
                        </div>

                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            {
                                denominations.map((item) => (
                                    <button class="group relative p-4 rounded-xl bg-black/20 border border-white/10 hover:border-[var(--color-primary)] hover:bg-[var(--color-primary)]/10 transition-all duration-300 text-left">
                                        <p class="font-bold text-white mb-1">
                                            {item.name}
                                        </p>
                                        <p class="text-sm text-white/60 group-hover:text-[var(--color-primary)] transition-colors">
                                            {formatCurrency(item.price)}
                                        </p>
                                    </button>
                                ))
                            }
                        </div>
                    </div>

                    <!-- 3. Pilih Pembayaran -->
                    <div class="glass rounded-3xl p-6 md:p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-10 h-10 rounded-full bg-[var(--color-primary)] flex items-center justify-center font-bold text-white"
                            >
                                3
                            </div>
                            <h2 class="text-xl font-bold text-white">
                                Pilih Pembayaran
                            </h2>
                        </div>

                        <div class="space-y-3">
                            {
                                paymentMethods.map((method) => (
                                    <button class="w-full p-4 rounded-xl bg-black/20 border border-white/10 hover:border-[var(--color-primary)] hover:bg-[var(--color-primary)]/10 transition-all duration-300 flex items-center justify-between group">
                                        <div class="flex items-center gap-4">
                                            <span class="text-2xl">
                                                {method.icon}
                                            </span>
                                            <span class="font-medium text-white">
                                                {method.name}
                                            </span>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-sm text-white/60 group-hover:text-white transition-colors">
                                                Biaya Admin:{" "}
                                                {formatCurrency(method.fee)}
                                            </p>
                                        </div>
                                    </button>
                                ))
                            }
                        </div>
                    </div>

                    <!-- 4. Beli -->
                    <div
                        class="glass rounded-3xl p-6 md:p-8 sticky bottom-4 border-t-4 border-[var(--color-primary)]"
                    >
                        <div class="flex items-center justify-between mb-4">
                            <p class="text-white/60">Total Pembayaran</p>
                            <p
                                class="text-3xl font-bold text-[var(--color-primary)]"
                            >
                                Rp 0
                            </p>
                        </div>
                        <button
                            class="w-full py-4 rounded-xl bg-[var(--color-primary)] text-white font-bold text-lg hover:brightness-110 transition-all shadow-[0_0_30px_rgba(147,51,234,0.3)]"
                        >
                            Beli Sekarang
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
