---
import Layout from "../layouts/Layout.astro";
import { getOrder } from "../lib/api";
import { formatCurrency, formatDate } from "../lib/utils";
import { Search, Package, Clock, CheckCircle, XCircle, Loader } from "lucide-astro";

const orderId = Astro.url.searchParams.get('id');
let order = null;
let error = null;

if (orderId) {
  const result = await getOrder(orderId);
  if (result.success) {
    order = result.data;
  } else {
    error = result.error || 'Pesanan tidak ditemukan';
  }
}

const statusConfig = {
  pending: { label: 'Menunggu Pembayaran', color: 'text-yellow-400', bg: 'bg-yellow-400/10', icon: Clock },
  processing: { label: 'Diproses', color: 'text-blue-400', bg: 'bg-blue-400/10', icon: Loader },
  completed: { label: 'Selesai', color: 'text-green-400', bg: 'bg-green-400/10', icon: CheckCircle },
  failed: { label: 'Gagal', color: 'text-red-400', bg: 'bg-red-400/10', icon: XCircle },
};
---

<Layout>
  <section class="py-12 bg-gradient-to-b from-[var(--color-primary)]/10 to-transparent">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Lacak <span class="text-gradient">Pesanan</span>
      </h1>
      <p class="text-white/60 max-w-2xl mx-auto">
        Masukkan ID pesanan untuk melihat status transaksi Anda.
      </p>
    </div>
  </section>

  <section class="py-12">
    <div class="container mx-auto px-4 max-w-2xl">
      <!-- Search Form -->
      <form method="GET" class="glass rounded-2xl p-6 mb-8">
        <div class="flex flex-col sm:flex-row gap-4">
          <div class="flex-1 relative">
            <Search class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-white/40" />
            <input
              type="text"
              name="id"
              value={orderId || ''}
              placeholder="Masukkan ID Pesanan (contoh: ORD-XXXXX)"
              class="w-full bg-black/20 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white placeholder:text-white/40 focus:outline-none focus:border-[var(--color-primary)] transition-colors"
            />
          </div>
          <button
            type="submit"
            class="px-8 py-3 rounded-xl bg-[var(--color-primary)] text-white font-bold hover:brightness-110 transition-all shadow-[0_0_20px_rgba(147,51,234,0.3)]"
          >
            Lacak
          </button>
        </div>
      </form>

      <!-- Result -->
      {orderId && (
        <div class="glass rounded-2xl p-6">
          {error ? (
            <div class="text-center py-8">
              <XCircle class="w-16 h-16 text-red-400 mx-auto mb-4" />
              <h3 class="text-xl font-bold text-white mb-2">Pesanan Tidak Ditemukan</h3>
              <p class="text-white/60">{error}</p>
            </div>
          ) : order ? (
            <div class="space-y-6">
              <!-- Order Header -->
              <div class="flex items-center justify-between flex-wrap gap-4">
                <div>
                  <p class="text-white/60 text-sm">ID Pesanan</p>
                  <p class="text-xl font-bold text-white">{order.id}</p>
                </div>
                <div class={`px-4 py-2 rounded-full ${statusConfig[order.status]?.bg || 'bg-white/10'} ${statusConfig[order.status]?.color || 'text-white'} font-medium flex items-center gap-2`}>
                  {statusConfig[order.status]?.icon && <span class="w-4 h-4"><Fragment set:html={`<${statusConfig[order.status].icon.name} />`} /></span>}
                  {statusConfig[order.status]?.label || order.status}
                </div>
              </div>

              <div class="h-px bg-white/10"></div>

              <!-- Order Details -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <p class="text-white/60 text-sm mb-1">Produk</p>
                  <p class="text-white font-medium">{order.productName || '-'}</p>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Nominal</p>
                  <p class="text-white font-medium">{order.denomination || '-'}</p>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Target ID</p>
                  <p class="text-white font-medium">{order.targetId || '-'}</p>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Total Pembayaran</p>
                  <p class="text-[var(--color-primary)] font-bold">{formatCurrency(order.totalAmount || 0)}</p>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Metode Pembayaran</p>
                  <p class="text-white font-medium">{order.paymentMethod || '-'}</p>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Tanggal</p>
                  <p class="text-white font-medium">{formatDate(order.createdAt)}</p>
                </div>
              </div>

              {order.status === 'pending' && order.paymentUrl && (
                <a
                  href={order.paymentUrl}
                  target="_blank"
                  class="block w-full py-4 rounded-xl bg-[var(--color-primary)] text-white font-bold text-center hover:brightness-110 transition-all shadow-[0_0_20px_rgba(147,51,234,0.3)]"
                >
                  Bayar Sekarang
                </a>
              )}
            </div>
          ) : (
            <div class="text-center py-8">
              <Package class="w-16 h-16 text-white/20 mx-auto mb-4" />
              <h3 class="text-xl font-bold text-white mb-2">Mencari Pesanan...</h3>
            </div>
          )}
        </div>
      )}

      {!orderId && (
        <div class="glass rounded-2xl p-12 text-center">
          <Package class="w-20 h-20 text-white/20 mx-auto mb-6" />
          <h3 class="text-2xl font-bold text-white mb-2">Lacak Pesananmu</h3>
          <p class="text-white/60 max-w-md mx-auto">
            Masukkan ID pesanan yang kamu terima setelah melakukan pembayaran untuk melihat status transaksi.
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
